<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "ข้อผิดพลาด") %> ไม่สามารถบันทึกบทความได้:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="text">
    <%= form.label :"ชื่อเรื่อง", style: "display: block" %>
    <%= form.text_field :title, placeholder: "ชื่อเรื่อง" %>
  </div>

  <div class="text">
    <%= form.label :"เนื้อหา (ไม่เกืน 100 ตัวอักษร)", style: "display: block" %>
    <%= form.textarea :body , placeholder: "เนื้อหา"%>
  </div>

  <div class="text">
    <%= form.label :"ผู้เขียน", style: "display: block" %>
    <%= form.text_field :author, placeholder: "ผู้เขียน" %>
  </div>


  <div>
   <%= form.submit(article.new_record? ? "สร้างบทความ" : "อัพเดทบทความ", class: "button") %>
  </div>
<% end %>
